rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Health data - allow read/write for authenticated users
    // Users can only write their own health data
    match /health_data/{deviceId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == deviceId || request.resource.data.userId == request.auth.uid);
    }
    
    // Leaderboard - allow read for all, write for authenticated users only
    match /leaderboard/{deviceId} {
      allow read: if true; // Public read access
      allow write: if isAuthenticated() && (request.auth.uid == deviceId || request.resource.data.userId == request.auth.uid);
    }
    
    // Leaderboards collection (new structure) - category-based leaderboards
    // Aggregated data - any authenticated user can write, but must include their userId
    // SECURITY: userId must be present and match authenticated user
    match /leaderboards/{category}/entries/{deviceId} {
      allow read: if true; // Public read access
      allow write: if isAuthenticated() && 
                      request.resource.data.userId != null &&
                      request.resource.data.userId == request.auth.uid;
    }
    
    // User reviews - sync review status across devices
    // Users can read/write their own review status
    match /user_reviews/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Device insights - read for all, write for authenticated users only if they own the data
    // SECURITY: Users can only write if:
    // 1. They are in the userIds list (for updates), OR
    // 2. They are creating new data (userIds contains only their userId)
    // This prevents users from overwriting other users' device insights
    match /device_insights/{deviceId} {
      allow read: if true; // Public read access
      allow create: if isAuthenticated() && 
                       request.resource.data.userIds != null &&
                       request.resource.data.userIds.size() == 1 &&
                       request.auth.uid in request.resource.data.userIds;
      allow update: if isAuthenticated() && 
                       request.resource.data.userIds != null &&
                       request.auth.uid in request.resource.data.userIds;
    }
    
    // Daily stats - allow read for all, write for authenticated users
    // SECURITY: userId must be present and match authenticated user
    match /daily_stats/{document} {
      allow read: if true; // Public read access
      allow write: if isAuthenticated() && 
                      request.resource.data.userId != null &&
                      request.resource.data.userId == request.auth.uid;
    }
    
    // User data - users can only read/write their own data
    match /user_data/{userId}/latest/current {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Aggregated stats - read only for all authenticated users
    match /aggregated_stats/{category} {
      allow read: if isAuthenticated();
      allow write: if false; // Only server can write
    }
    
    // App Power Leaderboard - public read, authenticated write
    // SECURITY: Users can only write if userId matches authenticated user
    match /app_power_leaderboard/{packageName} {
      allow read: if true; // Public read access
      allow write: if isAuthenticated() && 
                      request.resource.data.userId != null &&
                      request.resource.data.userId == request.auth.uid;
    }
  }
}
